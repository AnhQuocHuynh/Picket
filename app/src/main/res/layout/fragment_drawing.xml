<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363843"
    tools:context="com.example.locket.drawing.DrawingFragment">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#363843"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vẽ tranh"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_clear"
            app:tint="#FFFFFF"
            android:contentDescription="Clear" />
    </LinearLayout>

    <!-- Color Palette -->
    <HorizontalScrollView
        android:id="@+id/colorPalette"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#2A2D3A"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/colorBlack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_black"
                android:layout_marginEnd="8dp"
                android:tag="#000000" />

            <View
                android:id="@+id/colorRed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_red"
                android:layout_marginEnd="8dp"
                android:tag="#FF0000" />

            <View
                android:id="@+id/colorBlue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_blue"
                android:layout_marginEnd="8dp"
                android:tag="#0000FF" />

            <View
                android:id="@+id/colorGreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_green"
                android:layout_marginEnd="8dp"
                android:tag="#00FF00" />

            <View
                android:id="@+id/colorYellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_yellow"
                android:layout_marginEnd="8dp"
                android:tag="#FFFF00" />

            <View
                android:id="@+id/colorPurple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_purple"
                android:layout_marginEnd="8dp"
                android:tag="#800080" />

            <View
                android:id="@+id/colorOrange"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_orange"
                android:layout_marginEnd="8dp"
                android:tag="#FFA500" />

            <View
                android:id="@+id/colorPink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_pink"
                android:layout_marginEnd="8dp"
                android:tag="#FFC0CB" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Stroke Width Slider -->
    <LinearLayout
        android:id="@+id/strokeWidthContainer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#2A2D3A"
        app:layout_constraintTop_toBottomOf="@id/colorPalette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Độ dày:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <SeekBar
            android:id="@+id/strokeWidthSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="20"
            android:progress="5"
            android:progressTint="#FF6B35"
            android:thumbTint="#FF6B35" />

        <TextView
            android:id="@+id/strokeWidthText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Drawing Canvas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/drawingCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/strokeWidthContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.locket.drawing.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:background="#363843"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_undo"
            app:tint="#FFFFFF"
            android:contentDescription="Undo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/circle_button_orange"
            android:padding="12dp"
            android:src="@drawable/ic_post"
            app:tint="#FFFFFF"
            android:contentDescription="Post Drawing" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnEraser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_eraser"
            app:tint="#FFFFFF"
            android:contentDescription="Eraser" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>