<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.locket.auth.fragments.RegisterEmailFragment">

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/background_btn"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:src="@drawable/arrow_back_ios_24px"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/black"
            android:text="Tạo tài khoản mới"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:text="Email của bạn là gì?"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/background_edit_text"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:hint="Địa chỉ email"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_10sdp"
            android:textAppearance="@style/HintTextAppearance"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />

        <TextView
            android:id="@+id/txt_email_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:textColor="@color/red"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:text="Mật khẩu"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_edit_text"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:textAppearance="@style/HintTextAppearance"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />

        <TextView
            android:id="@+id/txt_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:textColor="@color/red"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_edit_text"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:textAppearance="@style/HintTextAppearance"
            android:textColor="@color/white"
            android:textColorHint="@color/hint" />

        <TextView
            android:id="@+id/txt_confirm_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:textColor="@color/red"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_text_view"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/background_btn_continue_un_check"
            android:gravity="center"
            android:enabled="false">

            <TextView
                android:id="@+id/txt_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/black"
                android:text="Tiếp tục"
                android:textColor="@color/hint"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/img_continue"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/arrow_right_alt_24px"
                app:tint="@color/hint" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout> 