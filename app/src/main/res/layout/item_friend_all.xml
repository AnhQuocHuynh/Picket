<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:minWidth="80dp"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:focusable="true"
    android:clickable="true">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_all_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/group_24px"
            app:civ_circle_background_color="?attr/colorSurfaceVariant"
            android:padding="18dp"
            app:civ_border_width="2dp"
            app:civ_border_color="?attr/colorOutlineVariant"/>

        <!-- Selection Badge -->
        <ImageView
            android:id="@+id/img_all_selected_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_circle_badge"
            android:padding="4dp"
            android:src="@drawable/check_24px"
            android:visibility="visible"
            app:tint="?attr/colorOnPrimary"
            android:contentDescription="Selected" />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_all_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
        android:text="Tất cả"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="1"
        android:ellipsize="end"
        android:contentDescription="Send to all friends" />

</LinearLayout> 