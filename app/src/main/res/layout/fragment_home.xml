<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363843"
    tools:context="com.example.locket.feed.HomeFragment">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_avatar"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvDropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/dropdown_bg"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawablePadding="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="12dp"
            android:text="Everyone"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_chat"
            app:tint="#FFFFFF"
            android:contentDescription="Chat" />
    </LinearLayout>

    <!-- Main Photo Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMainPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scaleType="fillCenter"
            android:contentDescription="Camera preview" />
    </androidx.cardview.widget.CardView>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginBottom="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/historyBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_gallery"
            app:tint="#FFFFFF"
            android:contentDescription="Gallery"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnDraw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_drawing"
            app:tint="#FF6B35"
            android:contentDescription="Draw"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="88dp">

            <ImageButton
                android:id="@+id/btnCapture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_button"
                android:contentDescription="Capture"
                android:padding="16dp" />

            <com.example.locket.feed.RecordingProgressView
                android:id="@+id/recordingProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <Space
            android:layout_width="40dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button_bg"
            android:padding="8dp"
            android:src="@drawable/ic_switch_camera"
            app:tint="#FFFFFF"
            android:contentDescription="Switch_Camera"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/historyBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/ivHistoryDropdown"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"
            app:tint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
