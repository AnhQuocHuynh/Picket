<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_16sdp"
        android:background="@color/bg">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back_ios_24px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_4sdp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Gá»­i Link Káº¿t Báº¡n"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold" />

    </RelativeLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section 1: Generate Link -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/item_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ 1. Táº¡o Link Má»i"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold" />

                    <TextView
                        android:id="@+id/tv_generated_token"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:background="@drawable/background_edit_text"
                        android:padding="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:visibility="gone"
                        android:textIsSelectable="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoft" />

                    <Button
                        android:id="@+id/btn_generate_link"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:text="Táº¡o Link Má»i"
                        android:background="@drawable/background_btn_register"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
                        android:layout_marginBottom="@dimen/_12sdp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section 2: Accept Link -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardBackgroundColor="@color/item_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ 2. Cháº¥p Nháº­n Lá»i Má»i"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold" />

                    <EditText
                        android:id="@+id/et_token_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:hint="Nháº­p link Ä‘á»ƒ cháº¥p nháº­n lá»i má»i..."
                        android:background="@drawable/background_edit_text"
                        android:padding="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoft"
                        android:textSize="@dimen/_12ssp" />

                    <Button
                        android:id="@+id/btn_accept_link"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:text="Cháº¥p Nháº­n Lá»i Má»i"
                        android:background="@drawable/background_btn_continue_check"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Help Instructions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/item_bg"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout> 