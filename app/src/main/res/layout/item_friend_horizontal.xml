<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_8sdp"
    android:gravity="center"
    android:minWidth="48dp"
    android:minHeight="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true">

    <FrameLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_widget_empty_circle_outline"
            android:contentDescription="Friend avatar"
            app:riv_corner_radius="@dimen/_30sdp" />

        <!-- Selection Border -->
        <View
            android:id="@+id/view_selection_border"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/friend_avatar_border_selected"
            android:visibility="gone"
            android:contentDescription="Selection indicator" />

        <!-- Selection Badge -->
        <ImageView
            android:id="@+id/img_selected_badge"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/bg_circle_border"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/check_24px"
            android:visibility="gone"
            android:contentDescription="Selected"
            app:tint="@color/white" />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/assets_fonts_proximasoft_proximasoftbold"
        android:text="Name"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/_65sdp" />

</LinearLayout> 