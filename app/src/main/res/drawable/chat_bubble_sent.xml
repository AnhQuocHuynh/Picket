<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền (có thể thay bằng màu primary nếu muốn) -->
    <solid android:color="#DCF8C6" />

    <!-- Bo góc: để lại góc dưới phải nhọn hơn như kiểu Messenger -->
    <corners
        android:topLeftRadius="16dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="0dp" />

    <!-- Viền nếu cần -->
    <!-- <stroke android:width="1dp" android:color="#A5D6A7" /> -->

    <!-- Khoảng đệm giữa nội dung và viền -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>